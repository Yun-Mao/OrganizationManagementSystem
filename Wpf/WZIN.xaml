<Window x:Class="Wpf.WZIN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
        Title="WZIN" Height="400" Width="300">
    <Canvas>
        <TextBlock Text="已选择物资为：" Canvas.Left="24" Canvas.Top="46"/>
        <TextBlock Name="name" Text="MC" Canvas.Left="126" Canvas.Top="46"/>
        <TextBlock Text="最大可借为：" Canvas.Left="24" Canvas.Top="79" Height="19" Width="84"/>
        <TextBlock Name="remain" Text="remain" Canvas.Left="113" Canvas.Top="79"/>
        <TextBlock Text="请输入你要借的数量：" Canvas.Left="24" Canvas.Top="110" Height="27" Width="122"/>
        <TextBox Style="{StaticResource ResourceKey=TextBoxStyle1}" Name="num" Canvas.Left="151" Canvas.Top="110" Height="28" Width="80"/>
        <TextBlock Text="备注：" Canvas.Left="24" Canvas.Top="154" Height="21" Width="101"/>
        <TextBox Style="{StaticResource ResourceKey=TextBoxStyle1}" Name="WZ_detail" Canvas.Left="73" Canvas.Top="154" Height="135" Width="158"/>
        <Button Style="{StaticResource ResourceKey=MyWpfButton}" Content="提交" Canvas.Left="96" Canvas.Top="311" Height="38" Width="95" Click="Button_Click"/>
    </Canvas>
</Window>
